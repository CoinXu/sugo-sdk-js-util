{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "target": "es3",
    "outDir": "./build",
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "./@types"
  },
  "include": [
    "src/**/*",
    "__test__/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}